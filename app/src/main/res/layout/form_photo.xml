<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageViewWW"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:src="@drawable/ppj"
        android:layout_marginBottom="346dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setPhotobutton"
        android:background="@drawable/btn_add"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_width="125.89dp"
        android:layout_height="41.6dp"
        android:fontFamily="@font/nunito_medium"
        android:text="Выбрать фото"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:onClick="openCamera"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/savePhotobutton"
        android:background="@drawable/btn_add"
        android:layout_gravity="center"
        android:layout_width="125.89dp"
        android:layout_height="41.6dp"
        android:fontFamily="@font/nunito_medium"
        android:text="@string/save_txt"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_marginBottom="25dp"
        android:onClick="saveNewPhoto"
        />


    <androidx.appcompat.widget.Toolbar
        android:layout_width="342dp"
        android:layout_height="81dp"
        android:background="@drawable/buttons_panel"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:elevation="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cameraStart"
                android:layout_width="125dp"
                android:layout_height="47dp"
                android:background="@drawable/btn_camera_off"
                android:text="Cam"
                android:fontFamily="@font/nunito_medium"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_centerVertical="true"



                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_settings"
                android:layout_width="56.9dp"
                android:layout_height="49.06dp"
                android:background="@drawable/btn_small_panel_off"
                android:text="Set"
                android:fontFamily="@font/nunito_medium"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="130dp"
                android:onClick="toSettingsPage"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_gallery"
                android:layout_width="56.9dp"
                android:layout_height="49.06dp"
                android:text="Gal"
                android:fontFamily="@font/nunito_medium"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:background="@drawable/btn_small_panel_on"
                android:layout_centerVertical="true"
                android:layout_marginLeft="191dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_top"
                android:layout_width="56.9dp"
                android:layout_height="49.06dp"
                android:text="Fav"
                android:fontFamily="@font/nunito_medium"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:background="@drawable/btn_small_panel_off"
                android:layout_centerVertical="true"
                android:layout_marginLeft="251dp"
                android:onClick="toFavspage"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

</LinearLayout>

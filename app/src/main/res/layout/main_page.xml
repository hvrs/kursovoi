<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@drawable/top_panel"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_width="432dp"
        android:layout_height="66dp"
        android:layout_centerHorizontal="true"
        android:elevation="20dp"
        />
    <TextView
        android:fontFamily="@font/nunito_medium"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginTop="0dp"
        android:layout_width="100dp"
        android:layout_height="66dp"
        android:text="@string/my_photos"
        android:elevation="20dp"
        android:layout_centerHorizontal="true"
        />
    <ImageView android:id="@+id/image_user"
        android:src="@drawable/input_photo"
        android:layout_marginStart="320dp"
        android:layout_marginTop="6dp"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:elevation="20dp"
        />

    <androidx.appcompat.widget.Toolbar
        android:layout_width="342dp"
        android:layout_height="81dp"
        android:background="@drawable/buttons_panel"
        android:layout_marginStart="29dp"
        android:layout_marginTop="733dp"
        android:layout_centerHorizontal="true"
        android:elevation="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cameraStart"
                android:layout_width="125dp"
                android:layout_height="47dp"
                android:background="@drawable/btn_camera_off"
                android:text="Cam"
                android:fontFamily="@font/nunito_medium"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_centerVertical="true"

                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_settings"
                android:layout_width="56.9dp"
                android:layout_height="49.06dp"
                android:background="@drawable/btn_small_panel_off"
                android:text="Set"
                android:fontFamily="@font/nunito_medium"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="130dp"
                android:onClick="toSettingsPage"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_gallery"
                android:layout_width="56.9dp"
                android:layout_height="49.06dp"
                android:text="Gal"
                android:fontFamily="@font/nunito_medium"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:background="@drawable/btn_small_panel_on"
                android:layout_centerVertical="true"
                android:layout_marginLeft="191dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_top"
                android:layout_width="56.9dp"
                android:layout_height="49.06dp"
                android:text="Fav"
                android:fontFamily="@font/nunito_medium"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:background="@drawable/btn_small_panel_off"
                android:layout_centerVertical="true"
                android:layout_marginLeft="251dp"
                android:onClick="toFavspage"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <GridView android:id="@+id/gridViewOoe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:gravity="center"
        android:verticalSpacing="8dp"

        android:stretchMode="columnWidth"/>





</RelativeLayout>